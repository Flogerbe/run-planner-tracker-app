<%- include('../partials/header') %>

<table class="table table-bordered table-hover" id="journal-list">
    <thead class="thead-dark">
        <th scope="col-2">Title</th>
        <th scope="col">Created By</th>
        <th scope="col">Notes</th>
        <th scope="col"></th>
        <th scope="col"></th>
        <th scope="col"></th>
    </thead>
    <tbody>
        <% journals.forEach(function(j) { %>
            <tr>
                <td><%= j.title %></td>
                <td><%= j.runner.name %></td>
                <td><%= j.notes %></td>
                <td><a href="/journals/<%= j._id %>">Details</a></td>
                <% if (j.runner && j.runner.equals(user && user._id)) { %>
                <td><button type="submit"><a href="/journals/<%= j._id %>/edit">✏️</a></button></td>
                <td><form id="delete-form" action="/journals/<%= j._id %>?_method=DELETE" method="POST">
                    <button type="submit">🗑</button>
                </form></td>
                <% } %>
            </tr>
        <% }) %>
    </tbody>
</table>

<%- include('../partials/footer') %>