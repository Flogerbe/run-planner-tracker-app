<%- include('../partials/header') %>

<table id="journal-list">
    <thead>
        <th>Title</th>
        <th>Created By</th>
        <th>Notes</th>
        <th></th>
        <th></th>
        <th></th>
    </thead>
    <tbody>
        <% journals.forEach(function(j) { %>
            <tr>
                <td><%= j.title %></td>
                <td><%= j.runner.name %></td>
                <td><%= j.notes %></td>
                <td><a href="/journals/<%= j._id %>">Details</a></td>
                <td><a href="/journals/<%= j._id %>/edit">Edit</a></td>
                <td><form id="delete-form" action="/journals/<%= j._id %>?_method=DELETE" method="POST">
                    <button type="submit">Delete</button>
                </form></td>
            </tr>
        <% }) %>
    </tbody>
</table>

<%- include('../partials/footer') %>