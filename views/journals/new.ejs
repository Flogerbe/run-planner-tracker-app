<%- include('../partials/header') %>
    
    <form id="new-journal-form" action="/journals" method="POST">
    <div class="d-flex align-items-left flex-column">
        <div class="d-flex">
        <label><p class="h3 font-weight-bold">Title:
            <input type="text" name="title"></p>
        </label>
        </div>
        <div class="d-flex">
        <label><p class="h3 font-weight-bold">Plans:
            <select name="plan">
            <% plans.forEach(function(plan) { %>
                <option value="<%= plan._id %>"><%= plan.title %></option>
            <% }) %>
            </select></p>
        </label>
        </div>
        <div class="d-flex"> 
        <label><p class="h3 font-weight-bold">Notes:
            <textarea name="notes"></textarea></p>
        </label>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <input type="submit" value="Create Journal" class="btn btn-info">
    </div>
    </form>

    <img src="/images/latte-waterstone.svg" class="img-fluid rounded mx-auto d-flex" alt="Waterstone Latte" id="latte">

<%- include('../partials/footer') %>