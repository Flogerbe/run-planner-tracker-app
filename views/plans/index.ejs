<%- include('../partials/header') %>

    <table id="plan-list">
        <thead>
            <th>Title</th>
            <th>Created By</th>
            <th>Distance</th>
            <th>Duration (weeks)</th>
            <th></th>
            <th></th>
            <th></th>
        </thead>
        <tbody>
            <% plans.forEach(function(plan) { %>
                <tr>
                    <td><%= plan.title %></td>
                    <td><%= plan.runner.name %></td>
                    <td><%= plan.distance %></td>
                    <td><%= plan.duration %></td>
                    <td><a href="/plans/<%= plan._id %>">Details</a></td>
                    <td><a href="/plans/<%= plan._id %>/edit">Edit</a></td>
                    <td><form id="delete-form" action="/plans/<%= plan._id %>?_method=DELETE" method="POST">
                        <button type="submit">Delete</button>
                    </form></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

<%- include('../partials/footer') %>