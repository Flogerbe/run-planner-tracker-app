<%- include('../partials/header') %>
    
    <form id="new-plan-form" action="/plans" method="POST">
        <div class="d-flex align-items-left flex-column">
        <div class="d-flex">
            <label><p class="h3 font-weight-bold">Title:
                <input type="text" name="title"></p>
            </label>
        </div>
        <div class="d-flex">
            <label><p class="h3 font-weight-bold">Distance:
                <select name="distance">
                    <option value="5k">5k</option>
                    <option value="10k">10k</option>
                    <option value="Half-Marathon">Half-Marathon</option>
                    <option value="Marathon">Marathon</option>
                </select></p>
            </label>
        </div>
        <div class="d-flex">
            <label><p class="h3 font-weight-bold">Duration (weeks):
                <input type="text" name="duration"></p>
            </label>
        </div>
        <div class="d-flex">
            <label><p class="h3 font-weight-bold">Notes:
                <textarea name="notes"></textarea></p>
            </label>
        </div>
        </div>
        <div class="d-flex justify-content-center">
            <input type="submit" value="Create Plan" class="btn btn-info">
        </div>
        
        
    </form>

<%- include('../partials/footer') %>