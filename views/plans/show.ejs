<%- include('../partials/header') %>

<section id="show-plan-page">
    <div>Title: </div>
    <div><%= plan.title %></div>
    <div>Created By: </div>
    <div><%= runner.name %></div>
    <div>Distance: </div>
    <div><%= plan.distance %></div>
    <div>Duration (weeks): </div>
    <div><%= plan.duration %></div>
    <div>Notes: </div>
    <div><%= plan.notes %></div>
</section>

<h2 class="detail-header">Training Days</h2>
<% if (plan.days.length) { %>
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Day Number</th>
                <th scope="col">Type</th>
                <th scope="col">Distance (miles)</th>
                <th scope="col-6">Notes</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <% plan.days.forEach(function(d) { %>
                <tr>
                    <td><%= d.dayNumber %></td>
                    <td><%= d.dayType %></td>
                    <td><%= d.distance %></td>
                    <td><%= d.notes %></td>
                    <% if (plan.runner && plan.runner.equals(user && user._id)) { %>
                    <td><form id="delete-day-form" action="/days/<%= d._id %>?_method=DELETE" method="POST">
                        <button type="submit">ðŸ—‘</button>
                    </form></td>
                    <% } %>
                </tr>
            <% }) %>
        </tbody>
    </table>
<% } else { %>
    <h5>No Days Added to Plan</h5>
<% } %>
<% if (plan.runner && plan.runner.equals(user && user._id)) { %>
<a href='/plans/<%= plan._id %>/days/new'>Add a New Day</a>
<% } %>


<%- include('../partials/footer') %>